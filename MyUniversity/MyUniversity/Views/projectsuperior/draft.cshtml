@{
    ViewBag.Title = "我要分享";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Help/Index.css" rel="stylesheet" />
<link href="~/Content/projectsuperior/public.css" rel="stylesheet" />
<link href="~/Content/Help/publish.css" rel="stylesheet" />
<link href="~/Content/projectsuperior/draft.css" rel="stylesheet" />
<link href="~/Scripts/wangEditor/css/wangEditor-1.3.0.min.css" rel="stylesheet" />
<div id="my-share">
    <div class="con-left">
        <div class="panel">
            <div class="panel-heading">
                <h2 class="panel-title panel-title-me">我要分享</h2>
            </div>
            <div class="inputqus">
                <div class="quesdetail clearfix">
                    <div class="question-area">
                        <input type="text" id="ques-title" class="ued-btn" maxlength="255" name="title" placeholder="输入标题" value="@ViewData["userMerit"]">
                        <p class="errortip errortip-input"></p>
                    </div>
                </div>
                <div class="quesdetail">
                    <div class="editor-wrap">
                        <div class="editor-write gollum-editor">
                            @*<textarea id="superior-text" class="ued-btn" rows="3" placeholder="文章内容">@ViewData["userIntro"]</textarea>*@
                            <textarea id='textarea1' style='height: 300px; width: 100%;'></textarea>
                            <p class="errortip errortip-area"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="saveques">
                <a class="university-btn publishbtn" id="submit-superior">提交</a>
            </div>
        </div>
    </div>
    <div class="con-right">
        <div class="panel">
            <div class="panel-heading">
                <h2 class="panel-title my-share-title">我的分享</h2>
            </div>
            <div class="share-tip">
                暂时没有新的回复
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/wangEditor/js/wangEditor-1.3.0.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('#textarea1').wangEditor({
            'uploadUrl': 'http://localhost:4987/data.ashx',
            //注意，menuConfig必须是一个二维数组
            'menuConfig': [
            ['fontFamily', 'fontSize'],
            ['bold', 'underline', 'italic'],
            ['setHead', 'foreColor', 'backgroundColor', 'removeFormat'],
            ['indent', 'outdent'],
            ['unOrderedList', 'orderedList'],
            ['justifyLeft', 'justifyCenter', 'justifyRight'],
            ['createLink', 'unLink', 'insertExpression'],
            ['insertHr', 'insertTable', 'webImage', 'uploadImg', 'insertSimpleCode'],
            ['undo', 'redo'],
            ['fullScreen']
            ]
        });
    });
</script>
